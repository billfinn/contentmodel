		<div class="col-xs-8">
			<h1>Legacy Sites</h1>
      <% @sitelist = LegacySite.order(:name) %>

      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Site</th>
            <th scope="col">Pages</th>
            <th scope="col">URL</th>
            <th scope="col">ID</th>
          </tr>
        </thead>
        <tbody>

        <% @sitelist.each do |site|  %>
        <tr>
          <td scope="row"><%= site.name %></td>
          <td><%= link_to "pages", legacysitedetail_path(site.id)%></td>
          <td><%= link_to site.name, site.url, target: :_blank %></td>
          <td><%= site.id %></td>
        </tr>

        <% end %>
        </tbody>
      </table>

		</div>
	</div>
