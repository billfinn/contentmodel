

  <div class="row">
    <!-- left column -->
		<div class="col-sm-4">

      <%= render "siteContentModel" %>

        <div class="well">
    			<h3>What is a Content Model?</h3>
          <p>A Content Model the result of business requirements and design decisions. It captures several elements that make up the digital experience:</p>
          <ul>
            <li>Page templates</li>
            <li>Components that make up each template</li>
            <li>Attributes of each component</li>
            <li>Intent, logic and rules for page templates, components and attributes</li>
          </ul>
        </div>

		</div>
    <!-- right column -->
		<div class="col-sm-8">
      <% @templatelist = SiteTemplateMapping.where site_id: (params[:id]) %>
      <% @site = Site.find(params[:id]) %>
      <h1>Template List<small class="text-muted"> <%= @site.name %></small></h1>
      <% @templatelist.each do |tl| %>
      <div class="row">
        <div class="col-8 col-sm-8">
          <div class="card border-secondary mb-3">
            <h3 class="card-header"><%= link_to tl.template.name, templatedetail_path(tl.template) %>
              <% if tl.template.existing == true %>
              <span class="badge badge-light">Existing</span>
              <% else %>
              <% end %>
              <small class="text-muted">Page Template</small>
            </h3>
            <ul class="list-group list-group-flush">
              <li class="list-group-item disabled">Components</li>
              <% tl.template.components.each do |n| %>
              <li class="list-group-item"><%= n.name %>
                <% if n.existing == true %>
                <span class="badge badge-light">Existing</span>
                <% else %>
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="col-8 col-sm-2">
          <img style="margin-top:30px;" src="<%= tl.template.image %>" height="200">
        </div>
      </div>



      <% end %>
    </div>


    </div>

		</div>
	</div>
  	<hr>
  <div class="row">
    <div class="col-xs-12">
      <footer>
        <p>Content Model v.0.1</p>
      </footer>
    </div>
  </div>
