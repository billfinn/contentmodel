

  <div class="row">
    <!-- left column -->
		<div class="col-sm-3">

      <%= render "siteContentModel" %>


		</div>
    <!-- right column -->
		<div class="col-sm-9">
      <% @templatelist = ::Template.joins( :site_template_mappings ).where( site_template_mappings: { site_id: (params[:id]) }).order(:name) %>
      <% @site = Site.find(params[:id]) %>
      <h1>Templates<small class="text-muted"> <%= @site.name %></small></h1>
      <div class="row">
        <div class="col-8 col-sm-8">
          <ol>
      <% @templatelist.each do |tl| %>
            <li>
              <table width="100%" border=0 cellspacing="0" cellpadding="0">
                <tr>
                  <td width="40%">
              <%= link_to tl.name, templatedetail_path(:id => tl.id, :site => @site.id) %>
                  </td>
                  <td width="30%">
              <% if tl.image.blank? %>
              <% else %>
                  <% if tl.image.include? "invision" %>
                      <%= link_to "View Comp", tl.image, target: "_blank" %><br>
                      <% else %>
                      <br><img src="<%= tl.image %>" height="200">
                      <% end %>
              <% end %>
                  </td>
                  <td width="30%">
              <% if tl.image_sizes.blank? %>
              <% else %>
                      <%#= link_to "Image Sizes", tl.image_sizes, target: "_blank" %><br>
              <% end %>
                  </td>
                </tr>
              </table>
            </li>
            <% end %>
          </ol>
          </div>
        </div>
        <div class="col-8 col-sm-2">
        </div>
      </div>




    </div>


	</div>
  	<hr>
  <div class="row">
    <div class="col-sm">

        <%= render "footer" %>

    </div>
  </div>
