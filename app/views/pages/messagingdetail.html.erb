<% @site = Site.find(params[:id]) %>

  <div class="row">
		<div class="col-sm-3">




			<h3>Notes</h3>


		</div>
		<div class="col-sm-9">
			<h1>Messaging Hierarchy</h1>

        <%= render "siteMessaging" %>

        <% @messages = AudienceMessage.includes(:hierarchy, :audience).where site_id: (params[:id]) %>
        <% #@templates = Template.joins(:hierarchy_mappings).where hierarchy_mappings: { hierarchy_id: => :@messages.hierarchy_id })%>
        <% #@levels = @messages.group_by(&:hierarchy) %>

        <% @messages.group_by(&:hierarchy).sort.each do |hierarchy, messages| %>
          <h5><%= hierarchy.name %></h5>
          <p class="text-muted"><%= hierarchy.description %></p>
          <table class="table table-hover">
            <tbody>
            <% messages.each do |message| %>
            <tr>
              <td scope="row" width="30%"><p><%=message.audience.name %></td><td><%=message.message %></td>
            </tr>
            <% end %>
        <% end %>
            </tbody>
          </table>


		</div>
	</div>
  	<hr>
  <div class="row">
    <div class="col-sm">

              <%= render "footer" %>

    </div>
  </div>
